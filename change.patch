+import csv
+import json
+import pathlib
+from typing import Iterable
+
+from .inventory import AppRecord
+
+
+def export_json(records: Iterable[AppRecord], path: pathlib.Path) -> None:
+    data = [record.__dict__ for record in records]
+    path.write_text(json.dumps(data, indent=2))
+
+
+def export_csv(records: Iterable[AppRecord], path: pathlib.Path) -> None:
+    with path.open('w', newline='') as f:
+        writer = csv.DictWriter(f, fieldnames=['name', 'path', 'obtained_from', 'signed_by_apple', 'essential', 'candidate'])
+        writer.writeheader()
+        for r in records:
+            writer.writerow({
+                'name': r.name,
+                'path': r.path,
+                'obtained_from': r.obtained_from,
+                'signed_by_apple': r.signed_by_apple,
+                'essential': getattr(r, 'essential', False),
+                'candidate': getattr(r, 'candidate', False),
+            })
